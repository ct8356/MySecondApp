<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ct8356.mysecondapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ct8356.mysecondapp.TimeAccumulatorActivity"
            android:label="@string/title_activity_time_accumulator" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ct8356.mysecondapp.ChooseTagActivity"
            android:label="@string/title_activity_choose_tag"
            android:parentActivityName="com.ct8356.mysecondapp.TimeAccumulatorActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ct8356.mysecondapp.TimeAccumulatorActivity" />
        </activity>
        <activity
            android:name="com.ct8356.mysecondapp.StartSessionActivity"
            android:label="@string/title_activity_start_session"
            android:parentActivityName="com.ct8356.mysecondapp.TimeAccumulatorActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ct8356.mysecondapp.TimeAccumulatorActivity" />
        </activity>
        <activity
            android:name="com.ct8356.mysecondapp.CreateTagActivity"
            android:label="@string/title_activity_creata"
            android:parentActivityName="com.ct8356.mysecondapp.ChooseTagActivity" >
        </activity>
        <activity
            android:name="com.ct8356.mysecondapp.TagManagerActivity"
            android:label="@string/title_activity_tag_manager"
            android:parentActivityName="com.ct8356.mysecondapp.TimeAccumulatorActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ct8356.mysecondapp.TimeAccumulatorActivity" />
        </activity>
    </application>

</manifest>
